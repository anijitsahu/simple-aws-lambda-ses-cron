{
  "service": "serverless-demo-s3",
  "frameworkVersion": "3",
  "configValidationMode": "error",
  "plugins": ["serverless-dotenv-plugin"],

  "provider": {
    "name": "aws",
    "iam": {
      "role": {
        "statements": [
          {
            "Effect": "Allow",
            "Action": [
              "ses:*"
            ],
            "Resource": "*"
          }
        ]
      }
    },
    "runtime": "nodejs16.x",
    "region": "ap-south-1",
    "deploymentMethod": "direct",
    "memorySize": 128
  },
  "functions": {
    "sendEmail": {
      "handler": "src/sendEmail.sendEmailHandler",
      "events": [
        {
          "httpApi": "POST /sendmail"
        }
      ]
    }
  }
}
